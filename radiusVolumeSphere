import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.lang.Math;

public class Zadanie5 {
    //Napisz program, który obliczy powierzchnię i objętość kuli o promieniu r
    //(Parametr wejściowy)
    public static void main(String[] args) throws IOException {
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        System.out.print("Podaj promień Kuli: ");
        double r = Integer.parseInt(br.readLine());

        System.out.print("Powierzchnia kuli o promieniu wynosi " + (4*Math.PI*r*r));
        System.out.print(", a objętość wynosi: " + ((4*Math.PI*r*r*r)/3));
    }
}
